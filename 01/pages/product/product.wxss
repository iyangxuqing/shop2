page {
  height: 100%;
}

.products {
  height: 100%;
  padding: 30rpx;
}

swiper.swiper-products {
  height: 100%;
}

.product {
  height: 100%;
  display: flex;
  flex-direction: column;
}

swiper.swiper-images {
  height: 100%;
}

.product-title {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f2f2f2;
  margin-bottom: 30rpx;
}

.product-images {
  height: 480rpx;
  margin-bottom: 30rpx;
}

.product-image {
  height: 100%;
}

.product-descs {
  flex-grow: 1;
  padding: 20rpx;
  line-height: 1.6;
  overflow: hidden;
  overflow-y: auto;
  letter-spacing: 1px;
  border: 1px solid #ddd;
}
