@import '/template/loading/loading.wxss';

.container {
  padding: 30rpx;
  padding-top: 0;
  background-color: #f8f8f8;
  background-clip: content-box;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 200rpx;
  padding: 20rpx;
}

.shop-name {
  font-size: 60rpx;
}

.shop-logo {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #ddd;
}

.page-shop-row {
  display: flex;
  align-items: center;
  min-height: 110rpx;
  border-bottom: 1px solid #ddd;
}

.page-shop-row:first-child {
  border-top: 1px solid #ddd;
}

.page-shop-row .icon {
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
  padding: 26rpx;
  margin-left: -10rpx;
}

.page-shop-row .text {
  flex-grow: 1;
  margin-left: -10rpx;
}

.shop-images {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.shop-image {
  width: 100%;
  height: 520rpx;
  border: 1px solid #ddd;
}

.shop-thumbs {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.shop-thumb {
  width: 210rpx;
  height: 210rpx;
  border: 1px solid #ddd;
}

.shop-logo {
  border: 0;
}
