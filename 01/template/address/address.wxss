.address {
  margin-bottom: 0;
}

.address-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 120rpx;
  padding: 0 30rpx;
  background-color: #fff;
}

.address-row-icon {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
}

.address-row-label {
  flex-shrink: 0;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.address-row-value {
  flex-grow: 1;
  margin-left: 20rpx;
}